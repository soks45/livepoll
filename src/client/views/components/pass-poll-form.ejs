<form action="/main/poll/<%= poll.id %>/answer" method="post">
    <div class="flex flex-col gap-y-4 mb-4">
        <h1><%= poll.name %></h1>
        <% answers.forEach((answer) => { %>
            <div class="flex items-center">
                <input id="<%= answer.id %>" name="<%= answer.id %>" type="checkbox" value="selected" class="w-4 h-4 bg-gray-100 border-gray-300 rounded text-primary-600 focus:ring-primary-500 dark:focus:ring-primary-600 dark:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500">
                <label for="<%= answer.id %>" class="ml-2 text-sm font-medium text-gray-900 dark:text-gray-100"><%= answer.name %></label>
            </div>
        <% }); %>
    </div>
    <button type="submit" class="inline-flex text-white items-center bg-blue-500 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
        <svg class="mr-1 -ml-1 w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd"></path></svg>
        Ответить
    </button>
</form>
